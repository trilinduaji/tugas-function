#include <iostream>
using namespace std;

double tanpakegiatan ( double beratbadan){
return (10 * 100) + (10 * 50) + (beratbadan - 20) * 20;
}
double kegiatanbiasa (double beratbadan) {
return (10 * 100) + (10 * 50) + (beratbadan - 20) * 35;
}
double kegiatansedang (double beratbadan) {
return (10 * 100) + (10 * 50) + (beratbadan - 20) * 40;
}
double kegiatankeras (double beratbadan) {
return (10 * 100) + (10 * 50) + (beratbadan - 20) * 45;
}
int main (){
  double beratbadan;
  int jeniskegiatan;
  cout << "masukan Berat Badan:";
  cin >> beratbadan;
  cout <<"1. kegiatan biasa" << endl <<"2. kegiatan sedang" << endl << "3. kegiatan keras" << endl<<"4. tanpa kegiatan"<<endl;
  cout << "Masukan jenis kegiatan : ";
  cin >> jeniskegiatan;

if (jeniskegiatan == 1){
cout << kegiatanbiasa (beratbadan) << "mL.";
}else if(jeniskegiatan == 2){
cout << kegiatansedang (beratbadan) << "mL.";
}else if(jeniskegiatan == 3){
cout << kegiatankeras (beratbadan) << "mL.";
}else if(jeniskegiatan == 4){
cout << tanpakegiatan(beratbadan) << "mL.";
}
return 0;
}
